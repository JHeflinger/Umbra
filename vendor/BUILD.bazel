cc_library(
    name = "win_raylib",
    hdrs = glob(["raylib/include/*.h"]),
    includes = ["raylib/include"],
    srcs = ["raylib/lib/raylib.lib"],
    visibility = ["//visibility:public"],
)

cc_library(
	name = "lin_raylib",
	hdrs = glob(["raylib/include/*.h"]),
	includes = ["raylib/include"],
	srcs = ["raylib/lib/libraylib.a"],
	visibility = ["//visibility:public"],
